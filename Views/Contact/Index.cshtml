@model List<Contact>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim Bilgileri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card shadow-sm border-0 rounded">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">İletişim Bilgileri Listesi</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            İletişim Bilgileri ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
                        </p>
                        <table class="table table-striped mt-3">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Açıklamalar</th>
                                    <th scope="col">Telefon 1</th>
                                    <th scope="col">Telefon 2</th>
                                    <th scope="col">Email 1</th>
                                    <th scope="col">Email 2</th>
                                    <th scope="col">Adres</th>
                                    <th scope="col" class="text-center">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ContactId</td>
                                        <td>@item.Title</td>
                                        <td>
                                            @if (item.Description.Length >= 13)
                                            {
                                                @(item.Description.Substring(0, 13) + "...")
                                            }
                                            else
                                            {
                                                @item.Description
                                            }
                                        </td>
                                        <td>@item.Phone1</td>
                                        <td>@item.Phone2</td>
                                        <td>@item.Email1</td>
                                        <td>@item.Email2</td>
                                        <td>@item.Address</td>
                                        <td class="text-center">
                                            <a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-outline-danger btn-sm" title="Sil">
                                                <i class="fas fa-trash-alt">Sil</i>
                                            </a>
                                            <a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-outline-success btn-sm ml-2" title="Güncelle">
                                                <i class="fas fa-edit">Güncelle</i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="text-right">
                            <a href="/Contact/CreateContact/" class="btn btn-info btn-lg mt-3">
                                <i class="fas fa-plus-circle"></i> Yeni İletişim Bilgisi Girişi
                            </a>
                        </div>
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
