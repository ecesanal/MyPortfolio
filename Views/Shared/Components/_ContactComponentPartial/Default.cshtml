@model List<MyPortfolio.DAL.Entities.Contact>

<section id="contact" class="s-contact target-section">

	<div class="overlay"></div>

	<div class="row narrow section-intro">
		<div class="col-full">
			<h3>İletişim</h3>
			<h1>Bana Yaz</h1>

			<p class="lead">Benimle İletişime Geçebilirsiniz Verdiğim Bilgilerle Bana Ulaşabilirsiniz.</p>
		</div>
	</div>

	<div class="row contact__main">
		<div class="col-eight tab-full contact__form">
			<form name="contactForm" id="MessageId" method="post" action="">
				<fieldset>

					<div class="form-field">
						<input name="NameSurname" type="text" id="NameSurname" placeholder="Name" value="" minlength="2" required="" aria-required="true" class="full-width">
					</div>
					<div class="form-field">
						<input name="Email" type="email" id="Email" placeholder="Email" value="" required="" aria-required="true" class="full-width">
					</div>
					<div class="form-field">
						<input name="Subject" type="text" id="Subject" placeholder="Subject" value="" class="full-width">
					</div>
					<div class="form-field">
						<textarea name="MessageDetail" id="MessageDetail" placeholder="message" rows="10" cols="50" required="" aria-required="true" class="full-width"></textarea>
					</div>
					<div class="form-field">
						<button class="full-width btn--primary">Gönder</button>
						<div class="submit-loader">
							<div class="text-loader">Gönderiliyor...</div>
							<div class="s-loader">
								<div class="bounce1"></div>
								<div class="bounce2"></div>
								<div class="bounce3"></div>
							</div>
						</div>
					</div>

				</fieldset>
			</form>

			<!-- contact-warning -->
			<div class="message-warning">
				Lütfen Tekrar Deneyin.
			</div>

			<!-- contact-success -->
			<div class="message-success">
				Mesajın Gönderildi, Teşekkürlerr!<br>
			</div>

		</div>
		<div class="col-four tab-full contact__infos">
			<h4 class="h06">Phone</h4>
			<p>@ViewBag.Phone1<br>
			</p>

			<h4 class="h06">Email</h4>
			<p>@ViewBag.Email1</p>

			<h4 class="h06">Address</h4>
			<p>@ViewBag.Address</p>
		</div>

	</div>

</section> 