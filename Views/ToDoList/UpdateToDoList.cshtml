@model ToDoList
@{
    ViewData["Title"] = "UpdateToDoList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Yapılacaklar</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yapılacakları Güncelleme Sayfası</div>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="ToDoListId" />
                            <label>İçerik</label>
                            <input type="text" asp-for="Title" class="form-control" />
                            <br />
                            <label>Tarih Aralığı</label>
                            <input type="date" asp-for="Date" class="form-control" />
                            <br />
                            <label>Görsel Yolu</label>
                            <input type="text" asp-for="ImgUrl" class="form-control" />
                            <br />
                            <button class="btn btn-info">Yapılacakları Güncelle</button>
                        </form>

                    </div>
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                </div>
            </div>
        </div>
    </div>
</div>
