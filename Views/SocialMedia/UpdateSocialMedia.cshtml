@model SocialMedia
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/Layout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sosyal Medya Bilgileri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Sosyal Medya Bilgileri Güncelleme Sayfası</div>
					</div>
					<div class="card-body">
						<form method="post">
							<input type="hidden" asp-for="SosialMediaId" />
							<label>Sosyal Medya Başlık</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Sosyal Medya Url</label>
							<input type="text" asp-for="Url" class="form-control" />
							<br />
							<label>Sosyal Medya İcon</label>
							<input type="text" asp-for="Icon" class="form-control" />
							<br />
							<button class="btn btn-warning">Sosyal Medya Bilgilerini Güncelle</button>
						</form>
					</div>
					<br />
					<br />
					<br />
					<br />
					<br />
					<br />
					<br />
					<br />
					<br />
					<br />
					<br />
				</div>
			</div>
		</div>
	</div>
</div>

